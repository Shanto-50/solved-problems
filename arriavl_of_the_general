#include <stdio.h>
int main()
{
    int n;
    scanf("%d", &n);
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    int max = arr[0];
    int min = arr[0];
    for (int i = 1; i < n; i++)
    {
        if (arr[i] > max)
            max = arr[i];
    }
    for (int i = 1; i < n; i++)
    {
        if (arr[i] < min)
            min = arr[i];
    }
    int maxinx;
    for (int i = 0; i < n; i++)
    {
        if (arr[i] == max)
        {
            maxinx = i;
            break;
        }
    }
    int mininx;
    for (int i = n - 1; i >= 0; i--)
    {
        if (arr[i] == min)
        {
            mininx = i;
            break;
        }
    }
    int count, mininx1;
    if (n == 2 && maxinx > mininx)
    {
        printf("1");
        return 0;
    }
    else if (maxinx == 0 && min == arr[n - 1])
    {
        printf("0");
        return 0;
    }
    if (maxinx < mininx)
    {
        mininx1 = (n - 1) - mininx;
        count = maxinx + mininx1;
        printf("%d", count);
    }
    else
    {
        mininx1 = (n - 1) - mininx;
        count = maxinx + mininx1;
        printf("%d", count - 1);
    }
    return 0;
}
